{% import "snippets/single_field.jinja2" as field %}

{% macro section(name, id) %}
<div data-bind="visible: eeprom.{{ id }}.visible">
    <strong>{{ _(name) }}</strong>
    <a href="{{ plugin_eeprom_marlin_totti_DATA_STRUCTURE[id].link }}" target="_blank" class="pull-right">Marlin Docs</a>
    <hr>

    {% for key, value in plugin_eeprom_marlin_totti_DATA_STRUCTURE[id].params.items() %}
    {{ field.single_field(id, key, value) }}
    {% endfor %}

    {% if "switches" in plugin_eeprom_marlin_totti_DATA_STRUCTURE[id] %}
        {% for switch in plugin_eeprom_marlin_totti_DATA_STRUCTURE[id]["switches"] %}
            <!-- ko foreach: eeprom.{{ id }}.{{ switch }} -->
            <p data-bind="text: key"></p>
            <hr>
            {% for key, value in plugin_eeprom_marlin_totti_DATA_STRUCTURE[id].params.items() %}
                {{ field.switched_field(key, value) }}
            {% endfor %}
            <!-- /ko -->
        {% endfor %}
    {% endif %}
</div>
{% endmacro %}

